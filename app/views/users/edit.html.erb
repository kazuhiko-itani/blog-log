<% provide(:title, "編集 | #{current_user.name}") %>

<h1>編集</h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_message', object: f.object %>

      <%= f.label :name, 'ユーザー名' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit '変更', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
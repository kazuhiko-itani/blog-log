<% provide(:title, 'ログイン') %>

<h1>ログイン</h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_for(:session, url: '/test/login') do |f| %>

      <%= f.label :name, 'ユーザー名' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit 'ログイン', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

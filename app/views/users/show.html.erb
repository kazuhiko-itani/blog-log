<% provide(:title, @user.name) %>

<div class='row'>
  <div class='col-md-10 col-md-offset-1'>
    <div class='user-profile'>
      <%= image_tag @user.image.url, size: 100 %>
      <h4>
        <%= @user.name %>
        <% if logged_in? && current_user == @user %>
          <small><%= link_to '(プロフィールを編集)', edit_user_path(@user) %></small>
        <% end %>
      </h4>
      <p><%= @user.profile %></p>
      <% unless @user.blog_url.empty? %>
        <p>ブログURL: <%= link_to @user.blog_url, @user.blog_url, :target=>["_blank"] %></p>
      <% end %>
    </div>
    <div class='total-working_times'>
      <h3>合計作業時間</h3>
      <%= @working_hours %>時間
      <%= @working_minutes %>分
    </div>
    <div class='clear'></div>

    <%= will_paginate @posts %>

    <table class='posts'>
      <% if @posts.any? %>
        <tr>
          <th>日付</th>
          <th>作業時間</th>
          <th>作業内容</th>
        </tr>
        <%= render @posts %>
      <% else %>
        まだ投稿はありません
      <% end %>
    </table>

    <%= will_paginate @posts %>
  </div>
</div>
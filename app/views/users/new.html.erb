<% provide(:title, '新規登録') %>

<h1>ユーザー登録</h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_message', object: f.object %>

      <%= f.label :name, 'ユーザー名' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit '登録', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

